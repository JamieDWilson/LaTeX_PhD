%--- Section Title Formatting ----%
\usepackage{titlesec}
% from http://tug.ctan.org/macros/latex/contrib/titlesec/titlesec.pdf
% basic usage: \titleformat{command} - section title to be formatted e.g. \chapter, \section, \subsection ...
%	[shape] - shape of section, see documentation pg. 3 in link above
%  {format} - formatting for the header text
%	{label} - format the the header text e.g. CHAPTER 1
%	{sep} - horizonal space between label and title body
%	{before-code} - format the text of your title
%	[after-code] - ?

\titleformat{\chapter}
	[display]
	{\normalfont\huge\bfseries\raggedright}
	{\centering\underline{{{\chaptertitlename}}\  \thechapter}}
	{20pt}
	{\Large\centering}
	[]

\titleformat{\section}
	[hang]
	{\normalfont\large\bfseries\raggedright}
	{\thesection}
	{20pt}
	{\large}
	[]

\titleformat{\subsection}
	[hang]
	{\normalfont\normalsize\bfseries\raggedright}
	{\thesection}
	{20pt}
	{\normalsize}
	[]
	
\titleformat{\subsubsection}
	[hang]
	{\normalfont\normalsize\itshape\raggedright}
	{\thesection}
	{20pt}
	{\normalsize}
	[]
	

